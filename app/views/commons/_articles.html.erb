<div class="row">
   <% articles.each do |article| %>
   <div class="col-md-4 mb-5 py-3">
     <div class="card h-100">
        <%= link_to article_path(article) do %>
          <p class="image">
           <%= image_tag article.img.url(:thumb) if article.img? %>
          </p>
          <div class="card-body"> 
            <% link_to profile_path do %>
             <p class="card-title"><%= article.user.name %></p>
            <% end %>
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.content %></p>
            <p class="card-text"></p>
          </div>
        <% end %>
      </div>
       <div class="text-right m-2">
           <i class="fas fa-heart"></i> <%= article.like_count %>
         <i class="fas fa-bookmark"></i> <%= article.store_count %>
        </div>
    </div>
  <% end %>
</div>
</div>

