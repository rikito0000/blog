<div class="container mb-5 pb-5">
  <div class="card mb-3">
  <div class="card-body">
     <p class="card-title">
   
         <%= @article.user.name %>
    <h5 class="card-title"><%= @article.title %></h5> 
    <p class="card-text"><%= @article.content %></p>
    <p class="text-right"><%= render 'btn'%></p>
  </div>
  </div>
<div class="card mb-3">
 <div class="card-body">
    <p class="card-title">コメント</p> 
    <% @comments.each do |comment| %>
      <div>
        <%= comment.content %>
     </div>
    <% end %>
  </div>
 </div>
 
 <div class="mb-5">
     
<%= render 'likes/like_btn', article: @article %>

<%= link_to new_article_comment_path(@article) do %>
  <i class="far fa-comment-dots fa-2x "></i>
<% end %>

   
<%= render 'stores/stores_btn', article: @article %>

 </div>
 

</div>

<%= render 'commons/footer' %>




