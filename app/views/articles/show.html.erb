<div class="container mb-5 pb-5">
  <div class="card mb-3">
  <div class="card-body row">
    <p class="card-title">
    <div class="col-md-4" >
      <%= link_to user_path(@article.user) do %>
          <h2 class="mb-3"><%= @article.user.name %></h2>
      <% end %>
      <p class="top-image">
         <%= image_tag @article.img.url if @article.img? %>
      </p>
    </div>

    <div class="col-md-8 mt-5" >
    <h5 class="card-title text-wrap"><%= @article.title %></h5> 
    <p class="card-text text-wrap"><%= @article.content %></p>
    </div>
    </p> 
  </div>
  </div>
<div class="card mb-3">
 <div class="card-body">
    <p class="card-title">コメント</p> 
    <% @comments.each do |comment| %>
      <div>
        <%= comment.content %>
     </div>
    <% end %>
  </div>
 </div>
 
 <div class="mb-5">
     
<%= render 'likes/like_btn', article: @article %>

<%= link_to new_article_comment_path(@article) do %>
  <i class="far fa-comment-dots fa-2x "></i>
<% end %>

   
<%= render 'stores/stores_btn', article: @article %>
 <%= render 'btn'%></p>

 </div>
 

</div>

